    // L·∫•y danh s√°ch GIF t·ª´ th∆∞ m·ª•c wwwroot/gifs
    var gifList = new List<string>();
    try
    {
        var webRoot = HostingEnvironment.WebRootPath;
        var gifPath = System.IO.Path.Combine(webRoot, "gifs");
        if (System.IO.Directory.Exists(gifPath))
        {
            var files = System.IO.Directory.GetFiles(gifPath, "*.gif");
