                    } else {
                        connection.invoke("SendMessage", currentUser, data.url, messageType)
                            .catch(err => console.error("L·ªói g·ª≠i file:", err));
                    }
                } else {
                    alert("‚ùå " + data.message);
                }
            })
            .catch(error => {
                console.error("L·ªói upload:", error);
                alert("‚ùå L·ªói khi g·ª≠i file");
            })
            .finally(() => {
                // Kh√¥i ph·ª•c tr·∫°ng th√°i n√∫t
                sendBtn.disabled = false;
                sendBtn.innerText = originalText;
                // Reset input file
                document.getElementById('imgInput').value = '';
            });
        }

