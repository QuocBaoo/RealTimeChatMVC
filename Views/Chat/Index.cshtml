            var avatarHtml = `<div class="avatar" style="background:${isMine ? myAvatarColor : (userColorMap[user] || '#ccc')}">${avatarChar}</div>`;
            
            // ƒê∆∞a t√™n ng∆∞·ªùi g·ª≠i v√†o trong khung tin nh·∫Øn (ch·ªâ hi·ªÉn th·ªã v·ªõi ng∆∞·ªùi kh√°c)
            var senderHtml = isMine ? "" : `<div class="message-sender">${displayName}</div>`;
