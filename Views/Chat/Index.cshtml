    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <!-- Truy·ªÅn bi·∫øn currentUser sang file JS ngo√†i -->
    <script>
        var currentUser = "@User.Identity.Name";
        var myAvatarColor = "@myAvatarColor";
        var currentGroup = ""; // M·∫∑c ƒë·ªãnh l√† chat chung ho·∫∑c r·ªóng
        var currentGroupId = 0;
        var userMap = {}; // L∆∞u tr·ªØ map Username -> ID
        var userColorMap = {}; // L∆∞u tr·ªØ map Username -> Color

        // [FIX] Kh·ªüi t·∫°o k·∫øt n·ªëi SignalR (B·ªï sung d√≤ng n√†y)
        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

        // 1. NH·∫¨N TIN NH·∫ÆN (Chung cho c·∫£ Group v√† Private)
        connection.on("ReceiveMessage", function (user, message, time, type) {
            if (!currentGroup) {
                appendMessage(user, message, time, type);
            }
        });

        // Nh·∫≠n tin nh·∫Øn nh√≥m (C·∫ßn update ChatHub ƒë·ªÉ d√πng h√†m n√†y n·∫øu mu·ªën t√°ch bi·ªát)
        connection.on("ReceiveGroupMessage", function (user, groupName, message, time, type) {
            if (groupName !== currentGroup) return; // Ch·ªâ hi·ªán n·∫øu ƒëang ·ªü ƒë√∫ng ph√≤ng
            appendMessage(user, message, time, type);
        });

        // 2. NH·∫¨N DANH S√ÅCH ONLINE (M·ªöI)
        //connection.on("UserJoined", function(u, id) { loadOnlineUsers(); });
        //connection.on("UserLeft", function(u) { loadOnlineUsers(); });
        connection.on("OnlineUsersSnapshot", function (users) {
            renderOnlineUsers(users);
        });

        function renderOnlineUsers(users) {
            var listHtml = "";
            users.forEach(u => {
                var name = u.username || u.Username;
                var id = u.id || u.Id;

                // Kh√¥ng hi·ªÉn th·ªã ch√≠nh m√¨nh
                if (name === currentUser) return;

                // T·∫°o m√†u avatar n·∫øu ch∆∞a c√≥
                if (!userColorMap[name]) {
                    userColorMap[name] = "#" + Math.floor(Math.random() * 16777215).toString(16);
                }

                listHtml += renderUserItem({ username: name, id: id });
            });
            document.getElementById("onlineUsers").innerHTML = listHtml;
        }

        function renderUserItem(u) {
            var name = u.username || u.Username;
            var id = u.id || u.Id;
            var avatar = `<div class="avatar" style="background:${userColorMap[name] || '#ccc'}">${name[0].toUpperCase()}</div>`;
            return `
            <div class="user-item" onclick="toggleActions(this)">
                ${avatar}
                <div style="flex:1; margin-left:10px;">
                    <div style="font-weight:bold">${name}</div>
                    <div style="font-size:0.7rem">ID: ${id}</div>
                </div>
                <div class="user-actions">
                    <button class="action-btn" onclick="addFriend(${id})">K·∫øt b·∫°n</button>
                    <button class="action-btn" onclick="createGroupWith(${id})">T·∫°o nh√≥m</button>
                    <button class="action-btn" onclick="startPrivateChat('${name}')">Chat ri√™ng</button>
                </div>
            </div>
        `;
        }

        function toggleActions(el) {
            document.querySelectorAll('.user-item').forEach(e => e.classList.remove('active'));
            el.classList.add('active');
        }

        // H√†m ph·ª• tr·ª£ ƒë·ªÉ hi·ªÉn th·ªã tin nh·∫Øn l√™n giao di·ªán
        function appendMessage(user, message, time, type) {
            var chatBox = document.getElementById("chatBox");
            var isMine = (user === currentUser);
            var divItem = document.createElement("div");
            divItem.className = isMine ? "message-item msg-right" : "message-item msg-left";

            var contentHtml = message;
            if (type === "Image") {
                contentHtml = `<img src="${message}" />`;
            }

            var avatarHtml = `<div class="avatar" style="background:${isMine ? myAvatarColor : (userColorMap[user] || '#ccc')}">${user[0].toUpperCase()}</div>`;

            divItem.innerHTML = `
            ${avatarHtml}
            <div>
                <div class="message-content">${contentHtml}</div>
                <div class="message-info">${isMine ? "B·∫°n" : user} ‚Ä¢ ${time}</div>
            </div>
        `;
            chatBox.appendChild(divItem);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        connection.start().then(() => {
            console.log("SignalR Connected");
        }).catch(err => console.error(err.toString()));

        document.getElementById("sendButton").addEventListener("click", function (event) {
            var input = document.getElementById("messageInput");
            if (input.value.trim() !== "") {
                if (currentGroup) {
                    connection.invoke("SendGroupMessage", currentGroup, input.value, "Text").catch(err => console.error(err.toString()));
                } else {
                    // [FIX] Truy·ªÅn currentUser thay v√¨ chu·ªói r·ªóng ""
                    connection.invoke("SendMessage", currentUser, input.value, "Text").catch(err => console.error(err.toString()));
                }
                input.value = ""; input.focus();
            }
            event.preventDefault();
        });

        // --- IMAGE SENDING (FIXED) ---
        function sendImage() {
            var file = document.getElementById('imgInput').files[0];
            if (!file) return;

            // Ki·ªÉm tra k√≠ch th∆∞·ªõc file (10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert("‚ùå File qu√° l·ªõn (t·ªëi ƒëa 10MB)");
                return;
            }

            // T·∫°o FormData ƒë·ªÉ upload file
            var formData = new FormData();
            formData.append('file', file);

            // Hi·ªÉn th·ªã tr·∫°ng th√°i ƒëang upload
            var sendBtn = document.getElementById("sendButton");
            var originalText = sendBtn.innerText;
            sendBtn.disabled = true;
            sendBtn.innerText = "‚è≥ ƒêang g·ª≠i...";

            // Upload file l√™n server
            fetch('/Files/Upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Detect lo·∫°i file d·ª±a tr√™n MIME type
                    var messageType = "File";
                    if (file.type.startsWith("image/")) {
                        messageType = "Image";
                    }
                    
                    // G·ª≠i link file qua SignalR (kh√¥ng g·ª≠i file nh·ªã ph√¢n)
                    if (currentGroup) {
                        connection.invoke("SendGroupMessage", currentGroup, data.url, messageType)
                            .catch(err => console.error("L·ªói g·ª≠i file:", err));
                    } else {
                        connection.invoke("SendMessage", currentUser, data.url, messageType)
                            .catch(err => console.error("L·ªói g·ª≠i file:", err));
                    }
                } else {
                    alert("‚ùå " + data.message);
                }
            })
            .catch(error => {
                console.error("L·ªói upload:", error);
                alert("‚ùå L·ªói khi g·ª≠i file");
            })
            .finally(() => {
                // Kh√¥i ph·ª•c tr·∫°ng th√°i n√∫t
                sendBtn.disabled = false;
                sendBtn.innerText = originalText;
                // Reset input file
                document.getElementById('imgInput').value = '';
            });
        }

        function insertEmoji(emoji) {
            document.getElementById("messageInput").value += emoji;
        }

        document.getElementById("messageInput").addEventListener("keyup", function (event) {
            if (event.key === "Enter") document.getElementById("sendButton").click();
        });

        window.onload = function () {
            loadGroups();
            loadFriends();
            loadPendingRequests();
            
            // T·ª± ƒë·ªông v√†o Chat Chung khi load trang
            setTimeout(() => {
                joinGlobalChat();
            }, 300);
        };

        // --- C√ÅC H√ÄM X·ª¨ L√ù NH√ìM ---

        function loadGroups() {
            fetch('/Group/GetMyGroups')
                .then(response => response.json())
                .then(data => {
                    var listHtml = `<div class="group-item" onclick="joinGlobalChat()">üí¨ Chat Chung</div>`;
                    data.forEach(g => {
                        listHtml += `<div class="group-item" id="group-${g.id}" onclick="joinRoom(${g.id}, '${g.name}')"># ${g.name}</div>`;
                    });
                    document.getElementById("groupList").innerHTML = listHtml;
                    
                    // N·∫øu ƒëang ·ªü trong group, highlight n√≥
                    if (currentGroupId) {
                        var activeGroup = document.getElementById(`group-${currentGroupId}`);
                        if (activeGroup) {
                            document.querySelectorAll(".group-item").forEach(el => el.classList.remove("active"));
                            activeGroup.classList.add("active");
                        }
                    }
                });
        }

        function joinGlobalChat() {
            console.log("Joining global chat...");
            currentGroup = "";
            currentGroupId = 0;
            document.getElementById("currentRoomName").innerText = "üí¨ Chat Chung";
            document.getElementById("groupActions").style.display = "none";
            
