        function startPrivateChat(username) {
            console.log("Starting private chat with:", username);
            
            if (!username) {
                alert("‚ùå Username kh√¥ng h·ª£p l·ªá");
                return;
            }

            fetch('/Group/CreatePrivateChat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ targetUsername: username })
            })
            .then(res => {
                if (!res.ok) {
                    throw new Error(`HTTP error! status: ${res.status}`);
                }
                return res.json();
            })
            .then(g => {
                console.log("Private chat created:", g);
                loadGroups();
                setTimeout(() => {
                    joinRoom(g.id, g.name, true);  // Truy·ªÅn true cho isPrivate
                }, 200);  // Delay ƒë·ªÉ loadGroups ho√†n th√†nh
            })
            .catch(err => {
                console.error("Error creating private chat:", err);
                alert("‚ùå L·ªói t·∫°o chat ri√™ng: " + err.message);
            });
        }

        function filterUsers() {
            var term = document.getElementById("searchUser").value.toLowerCase();
            var items = document.querySelectorAll("#userList .user-item");
            items.forEach(i => {
                if (i.innerText.toLowerCase().includes(term)) i.style.display = "flex";
                else i.style.display = "none";
            });
        }
