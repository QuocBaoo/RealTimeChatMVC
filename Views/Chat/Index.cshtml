        // --- FILE SENDING (IMAGE + FILE) ---
        function sendFile() {
            var file = document.getElementById('fileInput').files[0];
            if (!file) return;

            // Ki·ªÉm tra k√≠ch th∆∞·ªõc file (100MB)
            if (file.size > 100 * 1024 * 1024) {
                alert("‚ùå File qu√° l·ªõn (t·ªëi ƒëa 100MB)");
                return;
            }

            // T·∫°o FormData ƒë·ªÉ upload file
            var formData = new FormData();
            formData.append('file', file);

            // Hi·ªÉn th·ªã tr·∫°ng th√°i ƒëang upload
            var sendBtn = document.getElementById("sendButton");
            var originalText = sendBtn.innerText;
            sendBtn.disabled = true;
            sendBtn.innerText = "‚è≥ ƒêang g·ª≠i...";

            // Upload file l√™n server
            fetch('/Files/Upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Detect lo·∫°i file d·ª±a tr√™n MIME type
                    var messageType = "File";
                    if (file.type.startsWith("image/")) {
                        messageType = "Image";
