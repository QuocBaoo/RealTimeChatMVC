        function loadPendingRequests() {
            fetch('/Friend/GetPendingRequests').then(r => r.json()).then(data => {
                if (data.length > 0) {
                    document.getElementById("reqTitle").style.display = "block";
                    document.getElementById("requestList").style.display = "block";
