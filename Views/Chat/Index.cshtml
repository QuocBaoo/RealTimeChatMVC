                if (isVideo) {
                    contentHtml = `<div style="background:#000;border-radius:10px;overflow:hidden;width:300px;cursor:pointer;" onclick="openVideoModal('${message}', '${ext}')"><video style="width:100%;height:auto;pointer-events:none;"><source src="${message}" type="video/${ext === 'mp4' ? 'mp4' : 'video/' + ext}"></video><div style="padding:8px;text-align:center;background:#1A2980;color:#fff;font-size:0.9rem;">üîç B·∫•m v√†o ƒë·ªÉ xem to</div></div>`;
                } else {
                    contentHtml = `<div style="display:flex;align-items:center;gap:8px;"><span style="font-size:1.5rem;">${fileIcon}</span><div style="display:flex;flex-direction:column;gap:4px;"><span style="color:#1A2980;font-weight:bold;">${fileName}</span><a href="#" onclick="downloadFile('${message}', '${fileName}');return false;" style="color:#007bff;text-decoration:none;font-size:0.9rem;">üì• T·∫£i xu·ªëng</a></div></div>`;
                }
