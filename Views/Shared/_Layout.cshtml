<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealTimeChat MVC</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">

   <style>
        
        html, body {
            height: 100%; 
            margin: 0;
            padding: 0;
            overflow-x: hidden; 
        }

        body {
            font-family: 'Montserrat', sans-serif;
            /* MÀU NỀN CHUNG CHO CẢ WEB (Login/Register sẽ ăn theo màu này) */
            background: linear-gradient(135deg, #1A2980 0%, #26D0CE 100%);
            background-attachment: fixed; /* Giữ nền đứng im, không bị trượt khi cuộn */
            display: flex;
            flex-direction: column;
        }

        /* Menu kính trong suốt */
        .glass-navbar {
            background: rgba(255, 255, 255, 0.05) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: fixed; /* Đổi thành fixed để luôn nổi trên cùng */
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        /* ... Các phần CSS nút bấm, chữ menu giữ nguyên như cũ ... */
        .navbar-brand, .nav-link { color: white !important; text-shadow: 0 2px 4px rgba(0,0,0,0.2); }
        .btn-rounded { border-radius: 50px !important; padding: 8px 25px !important; font-weight: 600; transition: all 0.3s; }
        .btn-outline-custom { border: 2px solid rgba(255,255,255,0.6); color: white; }
        .btn-outline-custom:hover { background: white; color: #1A2980; }
        .btn-fill-custom { background: white; color: #1A2980; border: 2px solid white; }
        .btn-fill-custom:hover { background: rgba(255,255,255,0.9); transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.2); }
        
        /* Footer chỉnh lại cho gọn, không gây thanh cuộn */
        .footer {
            background: transparent;
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.8rem;
            position: fixed;
            bottom: 10px;
            width: 100%;
            text-align: center;
            pointer-events: none; /* Để bấm xuyên qua footer được */
        }
        .footer a { color: white; text-decoration: none; pointer-events: auto; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm glass-navbar box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing: 1px; font-size: 1.5rem;">
                    💬 RealTimeChat <span style="color: #00f2ff;">MVC</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link me-3">
                                    Xin chào, <strong>@User.Identity.Name</strong> 👋
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-custom btn-rounded btn-sm" asp-controller="Account" asp-action="Logout">
                                    Đăng xuất
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-custom btn-rounded me-2" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-fill-custom btn-rounded" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="flex: 1;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center py-3">
        <div class="container">
            &copy; 2025 - RealTimeChatMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>