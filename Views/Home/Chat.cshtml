<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* --- MODERN VARIABLES --- */
    :root {
        /* VIVID THEME */
        --primary-color: #6c5ce7;
        --primary-gradient: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
        --secondary-gradient: linear-gradient(135deg, #81ecec 0%, #00cec9 100%);
        --bg-body: #dfe6e9;
        --bg-glass: rgba(255, 255, 255, 0.85);
        --bg-sidebar: rgba(255, 255, 255, 0.95);
        --text-header: #2d3436;
        --text-normal: #636e72;
        --input-bg: #f1f2f6;
        --border-color: rgba(0,0,0,0.05);
        --hover-bg: rgba(108, 92, 231, 0.1);
        --active-bg: rgba(108, 92, 231, 0.15);
        --shadow-soft: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    }

    body {
        background: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%); /* Background sinh ƒë·ªông */
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        color: var(--text-normal);
        margin: 0;
        overflow: hidden; /* Ch·∫∑n scroll body */
    }

    @@keyframes gradientBG { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }

    /* 1. KHUNG BAO NGO√ÄI */
    .chat-wrapper {
        height: 100vh;
        width: 100vw;
        display: flex;
        background: transparent;
        backdrop-filter: blur(10px); /* Hi·ªáu ·ª©ng k√≠nh */
    }

    /* 2. SIDEBAR TR√ÅI (MENU) */
    .sidebar-left {
        width: 240px;
        background-color: var(--bg-sidebar);
        border-right: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
        box-shadow: 5px 0 15px rgba(0,0,0,0.05);
        z-index: 2;
    }

    .server-header {
        height: 60px;
        padding: 0 16px;
        display: flex;
        align-items: center;
        font-weight: 800;
        font-size: 1rem;
        color: var(--text-header);
        border-bottom: 1px solid var(--border-color);
        background: rgba(255,255,255,0.5);
    }

    .channel-list {
        flex: 1;
        padding: 10px 8px;
        overflow-y: auto;
    }

    .channel-item {
        padding: 8px;
        margin-bottom: 2px;
        border-radius: 12px;
        color: var(--text-normal);
        font-weight: 500;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .channel-item:hover {
        background-color: var(--hover-bg);
        transform: translateX(5px);
    }

    .channel-item.active {
        background-color: var(--active-bg);
        color: var(--primary-color);
        font-weight: 700;
    }

    .user-profile-bar {
        background-color: var(--bg-sidebar);
        border-top: 1px solid var(--border-color);
        padding: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* 3. KHUNG CHAT CH√çNH */
    .main-chat {
        flex: 1;
        display: flex;
        flex-direction: column;
        background-color: var(--bg-glass);
        min-width: 0; /* Fix flexbox overflow */
        position: relative;
    }

    .chat-header {
        height: 60px;
        padding: 0 16px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid var(--border-color);
        justify-content: space-between;
        background: rgba(255,255,255,0.8);
        backdrop-filter: blur(5px);
    }

    .chat-title-wrap {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: var(--text-header);
    }

    .chat-box {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px; /* Kho·∫£ng c√°ch gi·ªØa c√°c nh√≥m tin nh·∫Øn */
    }

    .message-item {
        display: flex;
        gap: 15px;
        animation: fadeIn 0.2s ease-out;
        max-width: 100%;
    }

    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: white;
        flex-shrink: 0;
        cursor: pointer;
        transition: transform 0.2s;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        border: 2px solid white;
    }

    .avatar:hover { transform: scale(1.05); }

    .message-body {
        display: flex;
        flex-direction: column;
        max-width: 85%;
    }

    .message-meta {
        display: flex;
        align-items: baseline;
        gap: 8px;
        margin-bottom: 4px;
    }

    .sender-name {
        font-weight: 700;
        color: var(--text-header);
        cursor: pointer;
    }
    .sender-name:hover { text-decoration: underline; }

    .timestamp {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .message-content {
        padding: 10px 15px;
        border-radius: 18px;
        background: white;
        font-size: 1rem;
        line-height: 1.4;
        color: var(--text-normal);
        word-wrap: break-word;
        white-space: pre-wrap;
        border-top-left-radius: 4px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    /* Tin nh·∫Øn c·ªßa m√¨nh (Highlight nh·∫π) */
    .msg-right {
        flex-direction: row-reverse;
    }
    
    .msg-right .message-body {
        align-items: flex-end;
    }

    .msg-right .message-content {
        background: var(--primary-gradient);
        color: white;
        border-top-left-radius: 18px;
        border-top-right-radius: 4px;
        box-shadow: 0 4px 15px rgba(108, 92, 231, 0.3);
    }

    /* 4. INPUT AREA */
    .chat-input-area {
        padding: 0 16px 20px 16px;
        background: rgba(255,255,255,0.6);
        flex-shrink: 0;
    }

    .input-wrapper {
        background-color: white;
        border-radius: 25px;
        padding: 10px 16px;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: background 0.2s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .input-wrapper:focus-within {
        box-shadow: 0 5px 20px rgba(108, 92, 231, 0.15);
    }

    .input-mess {
        flex: 1;
        background: transparent;
        border: none;
        color: var(--text-normal);
        font-size: 1rem;
        outline: none;
    }

    .btn-icon {
        background: none;
        border: none;
        color: var(--primary-color);
        cursor: pointer;
        font-size: 1.2rem;
        transition: color 0.2s;
        padding: 5px;
    }

    .btn-icon:hover { transform: scale(1.1); }
    .btn-send { color: var(--primary-color); }

    /* 5. SIDEBAR PH·∫¢I (ONLINE USERS) */
    .sidebar-right {
        width: 240px;
        background-color: var(--bg-sidebar);
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
        border-left: 1px solid var(--border-color);
        box-shadow: -5px 0 15px rgba(0,0,0,0.05);
        z-index: 2;
    }

    .online-header {
        padding: 20px 16px 10px;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
    }

    .user-list {
        flex: 1;
        overflow-y: auto;
        padding: 0 8px;
    }

    .user-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px;
        border-radius: 12px;
        cursor: pointer;
        opacity: 0.9;
        transition: background 0.2s;
    }

    .user-item:hover {
        background-color: var(--hover-bg);
        opacity: 1;
        transform: translateX(-5px);
    }

    .user-name {
        font-weight: 600;
        color: var(--text-normal);
        font-size: 0.95rem;
    }

    .status-dot {
        width: 10px;
        height: 10px;
        background: #00cec9;
        border-radius: 50%;
        border: 2px solid #fff;
        position: absolute;
        bottom: -2px;
        right: -2px;
        box-shadow: 0 0 5px #00cec9;
    }

    /* SCROLLBAR */
    ::-webkit-scrollbar { width: 8px; height: 8px; }
    ::-webkit-scrollbar-track { background-color: transparent; }
    ::-webkit-scrollbar-thumb { background-color: #bcc0c4; border-radius: 4px; }
    
    /* RESPONSIVE */
    @@media (max-width: 900px) {
        .sidebar-left, .sidebar-right { display: none; }
        .chat-header { padding: 0 10px; }
    }
</style>

