<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script>
    // --- CONFIG ---
    var currentUser = "@User.Identity.Name";
    var userColors = {}; // Cache m√†u avatar

    function getRandomColor(username) {
        if(userColors[username]) return userColors[username];
        // M√†u pastel hi·ªán ƒë·∫°i h∆°n
        var colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#96CEB4', '#FFEEAD', '#D4A5A5', '#9B59B6', '#3498DB'];
        var hash = 0;
        for (var i = 0; i < username.length; i++) hash = username.charCodeAt(i) + ((hash << 5) - hash);
        var color = colors[Math.abs(hash) % colors.length];
        userColors[username] = color;
        return color;
    }

    // 1. K·∫øt n·ªëi t·ªõi Hub
    var connection = new signalR.HubConnectionBuilder()
        .withUrl("/chatHub")
        .withAutomaticReconnect() // [FIX] Th√™m t·ª± ƒë·ªông k·∫øt n·ªëi l·∫°i
        .build();

    // 2. Nh·∫≠n tin nh·∫Øn t·ª´ Server
    connection.on("ReceiveMessage", function (user, message, time) {
        var chatBox = document.getElementById("chatBox");
        var isMine = (user === currentUser);
        
        var divItem = document.createElement("div");
        divItem.className = isMine ? "message-item msg-right" : "message-item msg-left";
        var avatarChar = user ? user[0].toUpperCase() : "?";
        var color = getRandomColor(user);
        
        divItem.innerHTML = `
            <div class="avatar" style="background:${color}">${avatarChar}</div>
            <div class="message-body">
                <div class="message-meta">
                    <span class="sender-name">${user}</span>
                    <span class="timestamp">${time}</span>
                </div>
                <div class="message-content">${message}</div>
            </div>
        `;

        chatBox.appendChild(divItem);
        chatBox.scrollTop = chatBox.scrollHeight;
    });

    // 3. Nh·∫≠n danh s√°ch Online (N·∫øu Hub h·ªó tr·ª£)
    connection.on("OnlineUsersSnapshot", function (users) {
        renderOnlineUsers(users);
    });

    // H√†m render danh s√°ch online
    function renderOnlineUsers(users) {
        var list = document.getElementById("onlineUsersList");
        var count = document.getElementById("onlineCount");
        list.innerHTML = "";
        count.innerText = users.length;

        users.forEach(u => {
            var name = u.username || u.Username;
            var color = getRandomColor(name);
            
            var item = document.createElement("div");
            item.className = "user-item";
            item.innerHTML = `
                <div style="position:relative">
                    <div class="avatar" style="width:32px; height:32px; font-size:0.8rem; background:${color}">
                        ${name[0].toUpperCase()}
                    </div>
                    <div class="status-dot"></div>
                </div>
                <div class="user-name">${name}</div>
            `;
            list.appendChild(item);
        });
    }

    // 3. B·∫Øt ƒë·∫ßu k·∫øt n·ªëi
    connection.start().then(() => {
        console.log("Connected to SignalR");
        // N·∫øu Hub c√≥ h√†m l·∫•y user online, c√≥ th·ªÉ g·ªçi ·ªü ƒë√¢y (t√πy logic Hub)
    }).catch(err => console.error(err.toString()));

    // 4. X·ª≠ l√Ω n√∫t G·ª≠i
    document.getElementById("sendButton").addEventListener("click", function (event) {
        var input = document.getElementById("messageInput");
        var message = input.value;
        
        if(message.trim() !== "") {
            connection.invoke("SendMessage", currentUser, message).catch(err => console.error(err.toString()));
            input.value = "";
            input.focus();
        }
        event.preventDefault();
    });

    document.getElementById("messageInput").addEventListener("keyup", function(event) {
        if (event.key === "Enter") {
            document.getElementById("sendButton").click();
        }
    });

    window.onload = function() {
        var chatBox = document.getElementById("chatBox");
        chatBox.scrollTop = chatBox.scrollHeight;
        
        // T√¥ m√†u avatar cho tin nh·∫Øn c≈©
        document.querySelectorAll('.avatar').forEach(el => {
            if(!el.style.background) el.style.background = getRandomColor(el.innerText);
        });
    };
</script>