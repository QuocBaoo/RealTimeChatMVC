﻿@{
    ViewData["Title"] = "Trang Chủ";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" rel="stylesheet">

<style>
    
    body {
        /* Phủ màu nền cho toàn bộ Body */
        background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        background-attachment: fixed; /* Giữ nền đứng im khi cuộn */
        color: white;
        overflow-x: hidden;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
    }

    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Ẩn bớt padding mặc định của Layout cũ để nó rộng ra */
    .container {
        max-width: 100% !important; 
    }

    /* 2. Căn giữa toàn bộ nội dung */
    .full-screen-wrapper {
        min-height: 80vh; /* Chiều cao chiếm 80% màn hình */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    /* 3. Tên Web Hiệu ứng Neon */
    .main-title {
        font-size: 6rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 3px;
        color: white;
        text-shadow: 0 0 10px rgba(255,255,255,0.5), 0 0 20px rgba(255,255,255,0.3), 0 0 30px rgba(255,255,255,0.2);
        margin-bottom: 20px;
        animation: fadeInDown 1s ease-out;
    }

    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-50px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .sub-title {
        font-size: 1.2rem;
        font-weight: 400;
        margin-bottom: 50px;
        color: rgba(255, 255, 255, 0.9);
        max-width: 700px;
        line-height: 1.6;
        animation: fadeInUp 1s ease-out 0.5s backwards;
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* 4. Nút bấm hiệu ứng Kính mờ (Glassmorphism) */
    .btn-glass {
        background: white;
        color: #e73c7e;
        border: none;
        padding: 15px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        font-weight: 700;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        animation: fadeInUp 1s ease-out 0.8s backwards;
    }

    .btn-glass:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        color: #23a6d5;
    }

    /* Icon chat bay bay */
    .chat-icon-3d {
        font-size: 6rem;
        margin-bottom: 20px;
        animation: floatIcon 4s ease-in-out infinite;
        filter: drop-shadow(0 10px 15px rgba(0,0,0,0.3));
    }

    @@keyframes floatIcon {
        0% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
        100% { transform: translateY(0px) rotate(0deg); }
    }
</style>

<div class="full-screen-wrapper">
    
    <div class="chat-icon-3d">💬</div>

    <h1 class="main-title">RealTimeChat MVC</h1>

    <p class="sub-title">
        Kết nối mọi người, chia sẻ ý tưởng trong thời gian thực. <br>
        Giao diện hiện đại - Tốc độ siêu nhanh - Bảo mật tuyệt đối.
    </p>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Chat" asp-action="Index" class="btn btn-glass">
            🚀 Vào Phòng Chat Ngay
        </a>
    }
    else
    {
        <div style="display: flex; gap: 20px;">
            <a asp-controller="Account" asp-action="Login" class="btn btn-glass">🔑 Đăng Nhập</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-glass">📝 Đăng Ký</a>
        </div>
    }
</div>